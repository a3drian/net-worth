{
	"name": "net-worth-api",
	"version": "1.0.0",
	"description": "Database management API for NetWorth",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/a3drian/spendit.git"
	},
	"author": "a3drian",
	"license": "ISC",
	"private": true,
	"main": "index.js",
	"engines": {
		"node": "20.x",
		"npm": "10.x"
	},
	"scripts": {
		"prebuild": "npm run type:check && npm run lint",
		"lint:prettier": "npx prettier --check .",
		"lint:ts": "eslint --ext .ts .",
		"lint": "npm run lint:ts",
		"build:tsc": "npm run type:check && tsc",
		"build": "npm run build:tsc",
		"start:debug": "npm run type:check && npm run ts:node:debug",
		"start:tsc": "npm run type:check && npm run ts:node:dev",
		"ts:node:dev": "ts-node-dev --watch -- src/index",
		"ts:node:debug": "ts-node-dev --inspect --watch -- src/index",
		"type:check": "tsc --noEmit --project .",
		"deploy": "npm run build",
		"start": "node src/index.js"
	},
	"dependencies": {
		"@a3drian/spendit-shared": "^1.0.12",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.18.1",
		"firebase-admin": "^11.11.0",
		"mongoose": "^6.3.4"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.35",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"eslint": "^8.16.0",
		"eslint-plugin-import": "^2.26.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.2"
	}
}
